<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/detail_lessonName"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center_vertical|center_horizontal"
        android:text="lessonName"
        />

    <TextView
        android:id="@+id/detail_semesterName"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="36dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="semesterName"
        android:textColor="@color/lightgray" />

    <TextView
        android:id="@+id/detail_lessonCode"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignBaseline="@+id/detail_lessonName"
        android:layout_alignBottom="@+id/detail_lessonName"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="lessonCode"
        android:textColor="@color/lightgray" />

    <TextView
        android:id="@+id/detail_teacherName"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="36dp"
        android:layout_alignBaseline="@+id/detail_semesterName"
        android:layout_alignBottom="@+id/detail_semesterName"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="teacherName"
        android:textColor="@color/lightgray" />

    <TextView
        android:id="@+id/detail_creditPoint"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/detail_teacherName"
        android:gravity="center_vertical|center_horizontal"
        android:text="creditPoint"
        android:textColor="@color/lightgray" />

    <TextView
        android:id="@+id/detail_totalStudentNumber"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/detail_teacherName"
        android:gravity="center_vertical|center_horizontal"
        android:text="totalStudentNumber"
        android:textColor="@color/lightgray" />
    <TextView
        android:id="@+id/detail_GPAlist"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="38dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/detail_teacherName"
        android:gravity="center_vertical|center_horizontal"
        android:text="GPAlist"
        android:textColor="@color/lightgray" />

    <com.github.mikephil.charting.charts.PieChart
        android:layout_marginTop="145dp"
        android:id="@+id/spread_pie_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>